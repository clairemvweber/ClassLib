<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".AddActivity">

  <TextView
      android:id="@+id/sort_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Sort first by:" />

  <Spinner
      android:id="@+id/sort_spinner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="48dp" />

  <TextView
      android:id="@+id/sort_label2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Sort second by:" />

  <Spinner
      android:id="@+id/sort_spinner2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="48dp" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <Button
        android:id="@+id/getLibraryButton"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_weight="1"
        android:text="Entire Library" />

    <Button
        android:id="@+id/getCheckedOutButton"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_weight="1"
        android:text="Checked Out" />
  </LinearLayout>

</LinearLayout>